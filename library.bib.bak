keywords = {Brain,Brain: physiology,Humans,Learning,Learning: physiology,Models,Nerve Net,Nerve Net: physiology,Psychological},
month = oct,
number = {10},
pages = {428--34},
pmid = {17921042},
title = {{Learning multiple layers of representation.}},
