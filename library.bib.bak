pages = {153--160},
title = {{Greedy layer-wise training of deep networks}},
url = {http://www.scopus.com/inward/record.url?eid=2-s2.0-84864073449&partnerID=tZOtx3y1 http://citeseer.ist.psu.edu/viewdoc/summary?doi=10.1.1.70.2022},
